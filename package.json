{
  "name": "vue3-monorepo",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.20.0",
  "description": "",
  "author": "Liu aifeng",
  "license": "Apache-2.0",
  "keywords": [
    "vue3",
    "monorepo",
    "eslint"
  ],
  "scripts": {
    "dev": "pnpm --filter @repo/web dev",
    "preinstall": "husky",
    "cz": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@repo/eslint-config": "workspace:*",
    "@types/node": "catalog:",
    "commitizen": "catalog:",
    "commitlint": "catalog:",
    "cz-git": "catalog:",
    "eslint": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:"
  },
  "lint-staged": {
    "{apps/**/*.{ts,vue,js},packages/**/*.{ts,vue,js}}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
